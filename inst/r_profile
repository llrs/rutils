          useFancyQuotes = FALSE,
          max.print = 100,
          usethis.description = list(
            "Authors@R" = utils::person(
              "Lluís", "Revilla Sancho",
              email = "lluis.revilla@gmail.com",
              role = c("aut", "cre"),
              comment = c(ORCID = "0000-0001-9747-2570")
            ),
